<p>
{% for record in sub.posts %}
    {% if record.type == 'book' %}
        {% assign biblio = record.editions[0] %}
        <i><a href="{{ record.url }}">{{ record.title }}{% if record.sub-title %}: {{ record.sub-title }}{% endif %}</a></i>. {% if record.with %}Edited with {{ record.with }}. {% endif %}{% if record.ed-note %}{{ record.ed-note }}. {% endif %}{% if biblio['publisher'] %} {{ biblio['publisher'] }}, {{ biblio['date'] }}{% endif %}.<br>
    {% endif %}
    
    {% if record.type == 'article' %}
        {% assign biblio = record.in[0] %}
        "<a href="{{ record.url }}">{{ record.title }}{% if record.sub-title %}: {{ record.sub-title }}{% endif %}</a>."
        {% if record.with %} With {{ record.with }}.{% endif %}
        {% if biblio['publication'] %} <i>{{ biblio['publication' ]}}</i>.{% endif %}
        {% if biblio['editors'] %} Edited by {{ biblio['editors'] }}.{% endif %}
        {% if biblio['publisher'] %} {{ biblio['publisher'] }}, {{ biblio['date'] }}.
        {% else %}{% if biblio['issue'] %} {{ biblio['issue'] }},{% endif %} {{ biblio['date'] }}.{% endif %}<br>
    {% endif %}
    <br>
{% endfor %}
</p>